{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": false,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "types": [],
    "skipLibCheck": true,
    "importHelpers": false,
    "sourceMap": true,
    "inlineSources": true
  },
  "angularCompilerOptions": {
    "compilationMode": "partial"
  },
  "exclude": [
    "**/*.spec.ts",
    "**/test.ts",
    "dist",
    "node_modules"
  ]
}
